<script>
  let flipped = false;

  function toggleCard() {
    const card = document.querySelector('.card');
    
    if (flipped) {
      card.innerHTML = `
        <p>If I Must Die,</p>
      `;
    } else {
      const options = [
        "Finish the prompt: If I were to die, I want you to knowâ€¦",
